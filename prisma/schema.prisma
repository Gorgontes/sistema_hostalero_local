generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Cliente {
  id              Int       @id @default(autoincrement())
  nombres         String
  apellidoPaterno String?
  apellidoMaterno String?
  tipoDocumento   Int
  numeroDocumento Int
  reservas        Reserva[]
}

model Reserva {
  id           Int        @id @default(autoincrement())
  precio       Int
  fechaIngreso DateTime?
  fechaSalida  DateTime?
  habitacionId Int
  clienteId    Int
  cliente      Cliente    @relation(fields: [clienteId], references: [id])
  habitacion   Habitacion @relation(fields: [habitacionId], references: [id])
}

model Habitacion {
  id               Int            @id @default(autoincrement())
  pisoId           Int
  detalles         String?
  estado           Int?
  numeroHabitacion Int            @unique
  piso             HabitacionPiso @relation(fields: [pisoId], references: [id], onDelete: Cascade)
  reservas         Reserva[]
}

model HabitacionPiso {
  id           Int          @id @default(autoincrement())
  detalles     String?
  numeroPiso   Int          @unique
  habitaciones Habitacion[]
}
