generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Cliente {
  id                Int       @id @default(autoincrement())
  nombresCompletos  String
  tipoDocumento     Int?
  numeroDocumento   String
  fechaNacimiento   DateTime?
  ciudadProcedencia String?
  reservas          Reserva[]
}

model TipoDocumento {
  id       Int    @id @default(autoincrement())
  nombre   String
  longitud Int
}

model Reserva {
  id           Int        @id @default(autoincrement())
  precio       Float?
  fechaIngreso DateTime?
  fechaReserva DateTime?
  noches       Int?
  habitacionId Int
  clienteId    Int
  observacion  String?
  cliente      Cliente    @relation(fields: [clienteId], references: [id])
  habitacion   Habitacion @relation(fields: [habitacionId], references: [id], "TodasLasReservas")
  habitacionActual Habitacion? @relation(name:"ReservaActual")
}

model Habitacion {
  id                Int            @id @default(autoincrement())
  pisoId            Int
  // detalles          String?
  reservaActual     Reserva?       @relation(fields: [reservaId], references: [id], name: "ReservaActual") 
  reservaId         Int? @unique

  descripcion       String?
  observaciones     String?
  estado            String         @default("libre")
  nombreHabitacion  String
  piso              HabitacionPiso @relation(fields: [pisoId], references: [id], onDelete: Cascade)
  reservas          Reserva[]     @relation("TodasLasReservas")
  camas             Int            @default(1)
  banos             Int            @default(1)
  wifi              Boolean        @default(true)
  tv                Boolean        @default(true)
  precioReferencial Float? // hay que usar float por que si usad decimal prisma genera una clases decimal js
}

model HabitacionPiso {
  id           Int          @id @default(autoincrement())
  detalles     String?
  numeroPiso   Int          @unique
  habitaciones Habitacion[]
}
